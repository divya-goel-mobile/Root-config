{
  "name": "@app/root-config",
  "scripts": {
    "start": "webpack serve --port 9000 --env isLocal",
    "lint": "eslint src --ext js",
    "test": "cross-env BABEL_ENV=test jest --passWithNoTests",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "prepare": "husky install",
    "build": "concurrently yarn:build:*",
    "build:webpack": "webpack --mode=production",
    "start-all": "npm-run-all --parallel start appHeader appFooter appBanner home products",
    "appHeader": "cd ../AppHeader && yarn start --port 8080",
    "appFooter": "cd ../AppFooter && yarn start --port 8081",
    "appBanner": "cd ../AppBanner && yarn start --port 8082",
    "home": "cd ../Home && yarn start --port 8083",
    "products": "cd ../Products && yarn start --port 8084",
    "productsDetail": "cd ../ProductDetail && yarn start --port 8085",
    "utility": "cd ../utility && yarn start --port 8086",
    "career": "cd ../Career && yarn start --port 8087"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/runtime": "^7.15.3",
    "concurrently": "^6.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-important-stuff": "^1.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "serve": "^12.0.0",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-config-single-spa": "^5.0.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@types/jest": "^27.0.1",
    "@types/systemjs": "^6.1.1",
    "single-spa": "^5.9.3"
  },
  "resolutions": {
    "styled-components": "5.3.5"
  }
}
